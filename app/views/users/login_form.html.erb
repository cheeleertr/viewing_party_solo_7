<%= form_with url: login_path, method: :post do |form| %>
  <div class="field">
    <%= form.label :email, "Email:" %>
    <%= form.text_field :email %>
    <%= form.label :password, "Password:" %>
    <%= form.text_field :password %>
    <%= form.label :location %>
    <%= form.text_field :location, value: cookies[:location] %>
    <%= form.submit "Log In" %>
  </div>
<% end %>