<h2>Discover Movies<h2>

<%= button_to "Discover Top Rated Movies", user_movies_path(@user), method: :get %>

<h2>Search Movie by Title<h2>
  <div id="title">
    <%= form_with url: user_movies_path(@user), method: :get, data: {turbo: false}, local: true do |form| %>
      <%= form.label :search, 'Search by Movie Title: ' %>
      <%= form.text_field :search, class: "form-control"  %>
      <%= form.submit 'Search', class: "btn btn-primary"  %>
    <% end %>
  </div>

